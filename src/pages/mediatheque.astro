---
import { t, changeLanguage } from "i18next";
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import Features from "~/components/widgets/Features.astro";
import { getYoutubeURL } from "~/utils/api";
import Grid from "~/components/blog/wpGridVideo.astro";

changeLanguage("fr");

const meta = {
    title: SITE.title,
    description: SITE.description,
    dontUseTitleTemplate: true,
};
const posts = await getYoutubeURL();
---

<Layout {meta}>
    <Features
    highlight={t('heroObjectifs.highlight')}
    title={t('heroObjectifs.title')}
    subtitle={t('mediatheque.description')}
/>

<Grid posts={posts}/>



