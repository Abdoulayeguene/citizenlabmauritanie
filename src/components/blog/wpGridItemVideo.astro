---
import type { Post } from '~/types';
import { YouTube } from "@astro-community/astro-embed-youtube";

export interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<article class="mb-6 transition">

  <h3 class="text-xl font-bold leading-tight sm:text-2xl font-heading" style="height: 60px;">
        <a
          href={post.lien?.lien}
          class="hover:text-primary dark:hover:text-green-700  transition ease-in duration-200"
        >
          {post.title}
        </a>
  </h3>
  <div class="youtube-wrapper mt-3">
    <YouTube 
  id={post.lien?.lien}
/>
  </div>


</article>
